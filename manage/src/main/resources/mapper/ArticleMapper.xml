    <insert id="create" parameterType="org.example.manage.entity.Article"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO article
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">title,</if>
            <if test="content != null">content,</if>
            <if test="image != null">image,</if>
            <if test="describe != null"> `describe`,</if>
            <if test="author != null">author,</if>
        </trim>


        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">#{title},</if>
            <if test="content != null">#{content},</if>
            <if test="image != null">#{image},</if>
            <if test="describe != null">#{describe},</if>
            <if test="author != null">#{author},</if>
        </trim>
    </insert>
    <update id="update" parameterType="org.example.manage.entity.Article">
        UPDATE article
        <set>
            <if test="title != null">title=#{title},</if>
            <if test="content != null">content=#{content},</if>
            <if test="image != null">image=#{image},</if>
            <if test="describe != null"> `describe`=#{describe},</if>
            <if test="author != null">author=#{author},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM article WHERE id = #{id}
    </delete>

    <select id="selectByTitle" resultMap="ArticleResultMap" parameterType="String">
        select * from article WHERE title = #{title}
    </select>

