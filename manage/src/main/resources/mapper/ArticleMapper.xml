<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.manage.mapper.ArticleMapper">

    <resultMap id="ArticleResultMap" type="org.example.manage.entity.Article">
        <id property="id" column="id" />
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="image" column="image" />
        <result property="describe" column="describe" />
        <result property="author" column="author" />

    </resultMap>

    <select id="selectById" resultMap="ArticleResultMap" parameterType="int">
        SELECT * FROM article WHERE id = #{id}
    </select>


    <select id="selectAll" resultMap="ArticleResultMap">
        SELECT * FROM article
    </select>

    <select id="selectByTitleLike" resultMap="ArticleResultMap" parameterType="String">
        SELECT * FROM article WHERE title LIKE CONCAT('%', #{title}, '%')
    </select>

