<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.manage.mapper.DepartmentMapper">

    <resultMap id="DepartmentMap" type="org.example.manage.entity.Department">
        <id property="id" column="id" />
        <result property="name" column="name" />

    </resultMap>

    <select id="selectById" resultMap="DepartmentMap" parameterType="int">
        SELECT * FROM department WHERE id = #{id}
    </select>


    <select id="selectAll" resultMap="DepartmentMap">
        SELECT * FROM department WHERE name LIKE CONCAT('%', #{name}, '%')
    </select>


